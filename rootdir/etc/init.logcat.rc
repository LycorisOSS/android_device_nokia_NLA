on fs
    rm /persist/boot_lc_main.txt
    rm /persist/boot_dmesg.txt

    start boot_lc_main
    start boot_dmesg

service boot_lc_main /system/bin/logcat -f /persist/boot_lc_main.txt
    class main
    user root
    group root system
    disabled
    oneshot

service boot_dmesg /system/bin/sh -c "dmesg -w > /persist/boot_dmesg.txt"
    class main
    user root
    group root system
    disabled
    oneshot
